    { "when": { "west":  "true" }, "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_arm_west" }},
    { "when": { "east":  "true" }, "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_arm_east" }},
    { "when": { "up":    "true" }, "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_arm_up" }},
    { "when": { "down":  "true" }, "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_arm_down" }}
