{
  "multipart": [
    { "when": { "part": "base", "facing": "south" }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine", "x": 90, "y": 180 } },
    { "when": { "part": "base", "facing": "west"  }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine", "x": 90, "y": 270 } },
    { "when": { "part": "base", "facing": "north" }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine", "x": 90, "y":   0 } },
    { "when": { "part": "base", "facing": "east"  }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine", "x": 90, "y":  90 } },
    { "when": { "part": "base", "facing": "up"    }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine" } },
    { "when": { "part": "base", "facing": "down"  }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine", "x": 180 } },

    { "when": { "part": "ring" },    "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine_ring" } },
    { "when": { "part": "bellows" }, "apply": { "model": "buildcraft:block/engines/redstone/redstone_engine_bellows" } }
  ]
}
