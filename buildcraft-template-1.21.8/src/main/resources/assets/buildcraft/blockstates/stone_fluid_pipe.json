{
  "multipart": [
    { "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_core" }},

    { "when": { "north": "true" }, "apply": { "model": "buildcraft:block/fluidpipes/stone_fluid_pipe_directions/stone_fluid_pipe_arm_north" }},
